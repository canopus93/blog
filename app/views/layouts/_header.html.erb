<!-- Navigation -->
<nav class="navbar navbar-default navbar-custom navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                Menu <i class="fa fa-bars"></i>
            </button>
            <%= link_to "Start Bootstrap", root_path, class: "navbar-brand"%>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <nav>
                <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "Home",         root_path %></li>
                    <li><%= link_to "Dashboard",    dashboard_path %></li>
                    <li><%= link_to "User",         users_path if logged_in? %></li>
                    <li><%= link_to "Blog Post",    blog_posts_path if logged_in? %></li>
                    <li><%= link_to "About",        about_path %></li>
                    <li><%= link_to "Log in",       login_path if !logged_in? %></li>
                    <li><%= link_to "User Profile", user_profile_path if logged_in? %></li>
                    <li><%= link_to 'Logout',       logout_path,
                            method: :delete,
                            data: { confirm: 'Are you sure to log out?' } if logged_in? %></li>
                </ul>
            </nav>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <%= site_heading(yield(:title)) %>
            </div>
        </div>
    </div>
</header>

<% if yield(:title) == 'Blog Post' %>
    <style type="text/css">
        .intro-header {
            background-image: url(<%= yield(:bg) %>)
        }
    </style>
<% else %>
    <style type="text/css">
        .intro-header {
            background-image: url(<%= image_path(yield(:bg)) %>)
        }
    </style>
<% end %>
