<% provide(:title, 'Home') %>
<% provide(:heading, 'Clean Blog') %>
<% provide(:subheading, 'A Clean Blog Theme by Start Bootstrap') %>
<% provide(:bg, 'home-bg.jpg') %>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <% @blog_posts.reverse_each do |blog_post| %>
                <% @user = User.find(blog_post.user_id) %>

                <div class="post-preview">
                    <a href="<%= blog_post_path(blog_post) %>">
                        <h2 class="post-title">
                            <%= blog_post.title %>
                        </h2>
                        <h3 class="post-subtitle">
                            <%= blog_post.summary %>
                        </h3>
                    </a>
                    <p class="post-meta">Posted by <a href="#"><%= @user.name %></a> on <%= blog_post.created_at.strftime("%B %d, %Y") %>
                </div>
                <hr>
            <% end %>
        </div>
    </div>
</div>